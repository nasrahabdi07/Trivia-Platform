<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.RegisterController" styleClass="container">
    <Label text="Create Account" styleClass="title" />
    <TextField fx:id="usernameField" promptText="Choose a username" maxWidth="300" styleClass="text-field"/>
    <Label fx:id="statusLabel" text="" maxWidth="300" wrapText="true" styleClass="status"/>
    <VBox spacing="10" alignment="CENTER">
        <Button text="Sign Up" onAction="#handleRegister" maxWidth="220"/>
        <Button text="Already have an account? Sign In" onAction="#goToLogin" maxWidth="260"/>
    </VBox>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.LoginController" styleClass="container">
    <Label text="Trivia Game" styleClass="title" />
    <Label text="Sign In" styleClass="subtitle"/>
    <TextField fx:id="usernameField" promptText="Enter username" maxWidth="300" styleClass="text-field"/>
    <Label fx:id="statusLabel" text="" maxWidth="300" wrapText="true" styleClass="status"/>
    <VBox spacing="10" alignment="CENTER">
        <Button text="Sign In" onAction="#handleLogin" maxWidth="220"/>
        <Button text="Create Account" onAction="#goToRegister" maxWidth="220"/>
    </VBox>
</VBox>

